{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "rules": {
        "max-line-length": {
            "options": [
                255
            ]
        },
        "linebreak-style": [
            true,
            "LF"
        ],
        "quotemark": [
            true,
            "single",
            "avoid-escape",
            "avoid-template"
        ],
        "no-console": false,
        "no-unused-expression": true,
        "ordered-imports": false,
        "member-access": [
            true,
            "no-public"
        ],
        "object-literal-sort-keys": false,
        "curly": [
            true,
            "ignore-same-line"
        ],
        "semicolon": [
            true,
            "never"
        ],
        "no-var-requires": false,
        "interface-name": [
            false,
            "never-prefix"
        ]
    }
}